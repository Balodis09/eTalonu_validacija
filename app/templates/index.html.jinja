<!DOCTYPE html>
<html>
<head>
    <title>Mars Route Popularity</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/charts.min.css">
</head>
<body>
    <h1>Most Popular Mars Routes</h1>
    <canvas id="marsRouteChart"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.8.0/dist/chart.min.js"></script>
    <script>
        var ctx = document.getElementById('marsRouteChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [], // Placeholder for route names
                datasets: [{
                    label: 'Number of Validations',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    data: []  // Placeholder for validation counts
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        // Update chart data with Flask-provided values
        var routeLabels = {{ results|map(attribute='marsruts')|list }};
        var validationCounts = {{ results|map(attribute='count')|list }};

        chart.data.labels = routeLabels;
        chart.data.datasets[0].data = validationCounts;
        chart.update();
    </script>
</body>
</html>
