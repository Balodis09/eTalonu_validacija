<!-- Rendered chart -->
<figure class='image is-4by3'>
    <canvas id='{{ canvas_id }}' aria-label='Validāciju datu grafiks' role='img' x-init='
                $store.chart.setUrl("{{ urls[0] }}");
                $nextTick(() => {$store.chart.newChart("{{ canvas_id }}")});'>
    </canvas>
</figure>
<!-- Button to reset chart zoom -->
<div class='buttons'>
    <button x-data class='button is-small is-info is-outlined' x-on:click='$store.chart.resetChartZoom()'>
        Attiestatīt mērogu
    </button>
    <button x-data class='button is-small is-info is-outlined' x-on:click='$store.chart.zoomIn()'>
        Pietuvināt
    </button>
    <button x-data class='button is-small is-info is-outlined' x-on:click='$store.chart.zoomOut()'>
        Attālināt
    </button>
</div>